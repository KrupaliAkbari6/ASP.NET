@model Student_Project.Models.student
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="~/Student/Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="~/Student/About">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href="~/Student/Contact">Contact</a>
                </li>
            </ul>
        </nav>
        <h2>Registration Form</h2>
        @{ 
            List<SelectListItem> obj = new List<SelectListItem>()
            {
                new SelectListItem(){Text="Rajkot", Value="1"},
                 new SelectListItem(){Text="Gondal", Value="2",Selected=true},
                  new SelectListItem(){Text="Surat", Value="3"},
                   new SelectListItem(){Text="Gandhinagar", Value="4"},
                    new SelectListItem(){Text="Ahmedabad", Value="5"}
            };
        }
    <div>
        @using (Html.BeginForm("Registration", "Student", FormMethod.Post))
        {
            <label for="fname" class="col-sm-2 col-form-label">First Name</label>
            @Html.TextBox("fname", "", new { @class = "form-control" })

            <label for="lname" class="col-sm-2 col-form-label">Last Name</label>
            @Html.TextBox("lname", "", new { @class = "form-control" })

            <label for="address" class="col-sm-2 col-form-label">Address </label>
            @Html.TextArea("address", "", new { @class = "form-control" })

            <label for="gender" class="col-sm col-form-label">Male </label>
            @Html.RadioButton("gender", "Male")

            <label for="gender" class="col-sm col-form-label">Female </label>
            @Html.RadioButton("gender", "Female")
            <br />
            @Html.DropDownList("City2", obj, new { @class = "dropdown" })
            <br />
            <br />
            <input type="submit" value="submit" name="submit" class="btn btn-primary" />

        }
           
        <h3>Details</h3>
        <table class="table table-danger table-bordered">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Address</th>
                    <th>Gender</th>
                    <th>City</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.fname</td>
                    <td>@Model.lname</td>
                    <td>@Model.address</td>
                    <td>@Model.gender</td>
                    <td>@Model.City2</td>
                </tr>

            </tbody>
        </table>

      
    </div>
    </div>
</body>
</html>
